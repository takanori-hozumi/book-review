
<div class="container pt-3 pb-5">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h2>User info</h2>
      <span class="text-danger"><strong><%= render "users/errors"%></strong></span>
        <%= form_with model:@user, local: true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control" %>
        </div>

        <div>
          <label from="inputImage">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "ファイルを選択" %>
        </div>

        <div class="form-group py-3">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, row: "5", class:"form-control", placeholder:"自己紹介" %>
        </div>
          <%= f.submit "Update User", class:"text-light btn-secondary"%>
        <% end %>
    </div>
  </div>
</div>
